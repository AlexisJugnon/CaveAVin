<Window x:Class="CaveAVin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaveAVin"
        mc:Ignorable="d"
        Title="MainWindow" Height="946.677" Width="1309.486">
    <Grid x:Name="MainWindows" HorizontalAlignment="Left" Height="927" Margin="0,10,0,-21" VerticalAlignment="Top" Width="1300">
        <Grid.RowDefinitions>
            <RowDefinition Height="293*"/>
            <RowDefinition Height="171*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="Accueil" Margin="166,211.417,184,177.583" UseLayoutRounding="False" IsHitTestVisible="True" Visibility="Hidden" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="11*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <Rectangle Fill="#FF8F3977" HorizontalAlignment="Left" Height="54" Stroke="Black" VerticalAlignment="Top" Width="955" Margin="0,0,-1,0"/>
            <Label x:Name="Label1" FontSize="20" Content="Le saviez-vous ?" HorizontalAlignment="Left" Margin="410,10,0,0" Foreground="White" VerticalAlignment="Top" Height="33"/>
            <TextBox Background="white" x:Name="TB_SaviezVous" HorizontalAlignment="Left" Height="260" Margin="0,54,-1,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="955" VerticalScrollBarVisibility="Auto" IsEnabled="False"/>

            <Button x:Name="BT_VoirBouteille" HorizontalAlignment="Left" Margin="666,350,0,0" VerticalAlignment="Top" Width="74" Height="86" Background="White" BorderBrush="White" Click="BT_VoirBouteille_Click" Grid.RowSpan="2">
                <Image Source="VoirBouteille.png" Height="86" Width="74"/>
            </Button>
            <Button x:Name="BT_VoirCave"  HorizontalAlignment="Left" Margin="438,352,0,0" VerticalAlignment="Top" Width="74" Height="86" Background="white" BorderBrush="White" Grid.RowSpan="2">
                <Image Source="VoirCave.png" Height="86" Width=" 74"/>
            </Button>
            <Button x:Name="BT_GererCave" HorizontalAlignment="Left" Margin="220,350,0,0" VerticalAlignment="Top" Width="74" Height="85" Background="White" BorderBrush="White" Grid.RowSpan="2">
                <Image  Source="GérerCave.png" Height="86" Width="74"/>
            </Button>
        </Grid>
        <Rectangle Fill="#FF8F3977" HorizontalAlignment="Left" Height="133" Margin="0,-11,0,0" Stroke="Black" VerticalAlignment="Top" Width="1300"/>
        <Image x:Name="logo" HorizontalAlignment="Left" Height="125" Margin="166,0,0,0" VerticalAlignment="Top" Width="143" Source="logoBouteille.png" />
        <Button x:Name="BT_rechercher" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Margin="1184,12,0,0" Height="90" Background="#FF8F3977" BorderBrush="#FF8F3977">
            <Image x:Name="chercher" HorizontalAlignment="Left" Height="90" VerticalAlignment="Top" Width="80" Source="chercher.png" />
        </Button>
        <Menu x:Name="MenuBase" HorizontalAlignment="Left" Height="107" Margin="10,0,0,473.5" VerticalAlignment="Bottom" Background="#FF8F3977" Width="100">
            <MenuItem x:Name="Menu" Header="" Click="MenuItem_Click" Height="85" Width="100">
                <MenuItem.Background>
                    <ImageBrush ImageSource="Menu.png"/>
                </MenuItem.Background>
            </MenuItem>

        </Menu>
        <Grid x:Name="AffichageCasier" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,122,0,19" Width="1300" Height="786" Grid.RowSpan="2">
            <Border x:Name="affBout" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="650" Margin="298,92,0,0" VerticalAlignment="Top" Width="700">
                <WrapPanel x:Name="ajB"/>
            </Border>
            <Grid x:Name="MultiCasier" Margin="218,0,220,281" Height="220" VerticalAlignment="Bottom">
                <Button x:Name="casPrec" Content="&#xD;&#xA;" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Margin="0,72,0,0" Height="88">
                    <Button.Background>
                        <ImageBrush ImageSource="BoutonPrécédent.png"/>
                    </Button.Background>
                </Button>
                <Button x:Name="casSuiv" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Margin="802,72,0,0" Height="88" Click="casSuiva">
                    <Button.Background>
                        <ImageBrush ImageSource="BoutonSuivant.png"/>
                    </Button.Background>
                </Button>
            </Grid>
            <Button x:Name="boutPlus" Content="&#xD;&#xA;" HorizontalAlignment="Left" Height="88" Margin="1164,654,0,0" VerticalAlignment="Top" Width="94">
                <Button.Background>
                    <ImageBrush ImageSource="BoutonPlus.png"/>
                </Button.Background>
            </Button>
            <Label x:Name="lNomC" Content="" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontFamily="Cambria" FontSize="36" TextOptions.TextHintingMode="Fixed" FontWeight="Bold"/>
        </Grid>
        <Grid x:Name="Faux_menu" Margin="0,117,1171,10" Visibility="Hidden" MouseLeave="part" Background="#FF8F3977" Grid.RowSpan="2">
            <Button x:Name="button1" Content="Button" HorizontalAlignment="Left" Margin="25,18,0,0" VerticalAlignment="Top" Width="75"/>
            <Button x:Name="button2" Content="Button" HorizontalAlignment="Left" Margin="25,37,0,0" VerticalAlignment="Top" Width="75"/>
        </Grid>
    </Grid>
</Window>
