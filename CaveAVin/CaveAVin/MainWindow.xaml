                        <ComboBox x:Name="cb_Vinification_Ajout" HorizontalAlignment="Left" Margin="108,419,0,0" VerticalAlignment="Top" Width="263" IsEditable="True"/>
                        <ComboBox x:Name="cb_Cru_Ajout" HorizontalAlignment="Left" Margin="108,372,0,0" VerticalAlignment="Top" Width="263" IsEditable="True"/>
                        <ComboBox x:Name="cb_Domaine_Ajout" HorizontalAlignment="Left" Margin="108,232,0,0" VerticalAlignment="Top" Width="263" IsEditable="True"/>
                        <ComboBox x:Name="cb_Type_Ajout" HorizontalAlignment="Left" Margin="108,91,0,0" VerticalAlignment="Top" Width="263"/>
                        <ComboBox x:Name="cb_Region_Ajout" HorizontalAlignment="Left" Margin="108,138,0,0" VerticalAlignment="Top" Width="263" IsEditable="True"/>
                        <ComboBox x:Name="cb_Pays_Ajout" HorizontalAlignment="Left" Margin="108,185,0,0" VerticalAlignment="Top" Width="263" IsEditable="True"/>
                        <TextBox x:Name="cb_Contenance_Ajout" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="263" Margin="108,282,0,0" TextChanged="cb_Contenance_Ajout_TextChanged"/>
                        <TextBox x:Name="cb_Millesime_Ajout" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="263" Margin="108,328,0,0" TextChanged="cb_Millesime_Ajout_TextChanged"/>

                        <Button x:Name="Validation_ajout" Content="Ajouter" HorizontalAlignment="Left" Margin="328,590,0,0" VerticalAlignment="Top" Width="75" Click="ValidationAjout_Click"/>

                    </Grid>

                </Border>

